package saram_view;

public class MenuView extends SaramView {
	@Override
	public void display() {
		System.out.println("::::: MENU :::::");
		System.out.println("1.입력 2.출력 3.검색 4.수정 5.삭제");
		System.out.print("선택 : ");
		int no = scan.nextInt();
		
		while(true) {
			try {
				while(no > 5 || no < 1) {
					System.out.println("범위를 넘었습니다.");
					System.out.print("다시 선택 : ");
					no = scan.nextInt();
				}
				break;
			} catch (Exception e) {
				System.out.println("숫자만 입력하세요!");
				scan.next();
			}
		} // end of while
	}
}
