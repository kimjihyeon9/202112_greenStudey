package saram_view;

import saram.R;

public class SaramDelete extends SaramView {
	@Override
	public void display() {
		System.out.println("::::: 사람 정보 삭제 :::::");
		if(R.saramVo == null) {
			System.out.println("검색 결과가 없습니다!");
			return;
		}
		System.out.println(R.saramVo);
		
		System.out.print("정말 삭제 하시겠습니까? (y/n) ");
		char yn = scan.next().charAt(0);
		if(yn == 'y') {
			R.saramVo = null;
		}
	}
}
