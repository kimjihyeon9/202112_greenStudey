package Address;

import java.io.BufferedReader;
import java.io.File;
import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.InputStreamReader;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;
import java.util.ArrayList;
import java.util.Scanner;

class Address {

	public Address() throws IOException, ClassNotFoundException {
		run();
	}

	

	public static String getLine() {
		InputStreamReader is = new InputStreamReader(System.in);
		BufferedReader b = new BufferedReader(is);

		try {
			return b.readLine();
		} catch (IOException e) {
			e.printStackTrace();
		}
		return null;
	}

	public void add() throws IOException, ClassNotFoundException {
		System.out.println("-------------------------- 등록 --------------------------");
		
		System.out.print("이름 입력 : ");
		name = getLine();

		System.out.print("전화번호 입력 : ");
		phone = getLine();

		System.out.print("주소 입력 : ");
		addr = getLine();

		System.out.print("이메일 입력 : ");
		email = getLine();

		aList.add(new Address(name, phone, addr, email));
		
		System.out.println("입력완료!");
	}

	public void listAll() throws IOException, ClassNotFoundException {
		System.out.println("-------------------------- 조회 --------------------------");
		
		for(int i = 0; i < aList.size(); i++) {
			System.out.print(aList.get(i).name + " ");
			System.out.print(aList.get(i).phone + " ");
			System.out.print(aList.get(i).addr + " ");
			System.out.print(aList.get(i).email + " ");
			System.out.println();
		}
		
//		fis = new FileInputStream(file);
//		ois = new ObjectInputStream(fis);
//		ArrayList<Address> list = (ArrayList<Address>)ois.readObject();
//		
//		Iterator<Address> it = list.iterator();
//		while(it.hasNext()) {
//			System.out.println(it.next());
//		}
//		
//		ois.close();
	}

	public void edit() {
		System.out.println("-------------------------- 수정 --------------------------");

	}

	public void delete() {
		System.out.println("-------------------------- 삭제 --------------------------");

	}

	public void end() {
		System.out.println("프로그램이 종료됩니다.");
		System.exit(0);
	}
	
	public void save() throws IOException {
		fos = new FileOutputStream(file);
		oos = new ObjectOutputStream(fos);
		ArrayList<Address> list = aList;
		oos.writeObject(list);
		
		oos.close();
	}

}

public class AddressMain {

	public static void main(String[] args) throws ClassNotFoundException, IOException {
		new Address();
	}

}
