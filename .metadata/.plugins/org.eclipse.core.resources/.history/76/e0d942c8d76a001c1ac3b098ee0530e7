//	import derived.Circle;
	public static void main04(String[] args) {
		Shape shape = new Circle_();
		shape.draw();
	}
	
	public static void main05(String[] args) {
		Calendar now = Calendar.getInstance();
		int hour = now.get(Calendar.HOUR_OF_DAY);
		int minute = now.get(Calendar.MINUTE);
		int ampm = now.get(Calendar.AM_PM);
		
		System.out.println("현재 시간은 " + hour+ "시 " + minute + "분입니다.");
		
		if(hour > 4 && hour < 12)
			System.out.println("Good Moring");
		else if(hour >= 12 && hour < 18)
			System.out.println("Good Afternoon");
		else if(hour >= 18 && hour < 22)
			System.out.println("Good Evening");
		else
			System.out.println("Good Night");
	}
	
	public static void main(String[] args) {
		Calendar nowT = Calendar.getInstance();
		int s1 = nowT.get(Calendar.SECOND);
		int s2 = nowT.get(Calendar.SECOND);
		Scanner scan = new Scanner(System.in);
		
		System.out.println("10초에 가까운 사람이 이기는 게임입니다.");
		System.out.print("황기태 시작 <Enter>키>>");
		String e = scan.nextLine();
		
		System.out.println("현재 초 시간 = " + s1);
		System.out.print("10초 예상 후 <Enter>키>>");
		System.out.println("현재 초 시간 = " + s2);
		int a = s2 - s1;
		
		System.out.print("이재문 시작 <Enter>키>>");
		System.out.println("현재 초 시간 = " + s1);
		System.out.print("10초 예상 후 <Enter>키>>");
		System.out.println("현재 초 시간 = " + s2);
		int b = s2 - s1;
		
		String n = "";
		System.out.printf("황기태의 결과 %d, 이제문의 결과 %d, 승자는 %s", a, b, n);
		
	}

}













