package saram_view;

import saram.R;
import saram_model.SaramVo;

public class SaramDatail extends SaramView {
	@Override
	public void display() {
		if(R.type == R.SEARCH) {
			System.out.println("::::: 사람 정보 검색 :::::");
			System.out.print("검색 할 이름>> ");
			String name = scan.next();
			R.saramVo = new SaramVo(0, name, null, null);
			// controller 로 이동
		} else {
			System.out.println("::::: 사람 목록 상세보기 :::::");
			System.out.println(R.saramVo);
		}
	}
}
